<editors>
    <!-- Boolean Editor for On/Off -->
    <editor id="bool">
        <range uom="2" subset="0,1" nls="IX_BOOL" />
    </editor>
    
    <!-- Brightness/Intensity Editor (0-100%) -->
    <editor id="BRI">
        <range uom="51" min="0" max="100" step="1" prec="0" />
    </editor>
    
    <!-- Color Temperature Editor (2000-9000K) -->
    <editor id="CLITEMP">
        <range uom="26" min="2000" max="9000" step="100" prec="0" />
    </editor>
</editors>